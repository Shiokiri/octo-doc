<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/toFragmentThree"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_arrow_back_anti"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"></Button>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/border">
        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"></TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_gravity="center_vertical"
            ></ImageView>

        <Button
            android:id="@+id/toChange"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-410dp"
            android:background="@color/transparent"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/red">
        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:textStyle="bold"
            android:textSize="32dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"></TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_gravity="center_vertical"
            ></ImageView>

        <Button
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-410dp"
            android:background="@color/transparent"></Button>
    </LinearLayout>

</LinearLayout>